@model IdentityBase.Actions.Logout.LogoutViewModel

<div class="logout-page">
    <div class="page-header">
        <h1 localize="">Logout</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p localize="">Would you like to logout?</p>
            <form asp-route="Logout">
                <input type="hidden" name="logoutId" value="@Model.LogoutId" />
                <fieldset>
                    <div class="form-group">
                        <button class="btn btn-primary" localize="">Yes</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>